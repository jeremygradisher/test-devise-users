<% if (current_user && current_user.is_admin?) || (current_user && current_user.id == @user.id ) %>

<h1>Edit User</h1>

<%= render 'form', user: @user %>

<%= link_to "Cancel", user_path(@user), class: "btn btn-secondary" %>


<% else %>
  <h2>You are not authorized to be here. </h2>
  <a href="/" class="btn btn-primary">Return Home</a>
<% end %>