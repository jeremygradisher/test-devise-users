<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Is Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.is_admin ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-sm btn-outline-primary me-1" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-secondary me-1" %>
          <%= link_to "Delete", 
                      user_path(user), 
                      method: :delete, 
                      "data-turbo-method": "delete",
                      "data-turbo-confirm": { confirm: "Are you sure?", turbo: false }, 
                      class: "btn btn-sm btn-outline-danger" %>
          <%#= link_to "Delete (Turbo)", 
                      user_path(user), 
                      method: :delete, 
                      data: { confirm: "Are you sure?" }, 
                      class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

