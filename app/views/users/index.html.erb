<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Is Admin</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.is_admin ? 'Yes' : 'No' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="mb-3">
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
</div>